<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemData"
            type="com.example.mypraticeapplication.model.saveresidenceverification.SaveResidanceApplicantFamilyDetail" />

        <variable
            name="holder"
            type="com.example.mypraticeapplication.view.adapter.AddFamilyMemberViewHolder" />


    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnAddDay"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/btnRemoveDay"
        android:background="@drawable/ic_circle_add"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnRemoveDay"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_red_cancel_rounded"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAddDayMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnRemoveDay">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputExposedDropdownMenu"
            android:id="@+id/inspnRelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/main_bg"
            android:textColorHint="@color/main_bg"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="@string/applicant_Relation_Applicant_label">

            <com.example.mypraticeapplication.widget.InstantAutoComplete
                android:id="@+id/spnRelation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:clickable="true"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:entries="@array/addresses_array"
                android:text="@{itemData.relation}"
                android:focusable="false"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_323232"
                android:textSize="@dimen/verificationDetailTextSize"
                app:custom_font="@string/app_font_regular" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/inspnRelation"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inpapplicant_MemberCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextInputLayout"
                app:hintTextColor="@color/main_bg"
                app:passwordToggleEnabled="false"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                tools:ignore="MissingClass,MissingConstraints">

                <com.example.mypraticeapplication.widget.TypefaceEditText
                    android:id="@+id/edt_MemberCount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:hint="@string/applicant_TotalFamilyMembers_label"
                    android:imeOptions="actionNext"
                    android:text="@{itemData.memberCount.toString()}"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_323232"
                    android:textSize="@dimen/verificationDetailTextSize"
                    app:custom_font="@string/app_font_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inpapplicant_EaringMemberCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextInputLayout"
                app:hintTextColor="@color/main_bg"
                app:passwordToggleEnabled="false"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                tools:ignore="MissingClass,MissingConstraints">

                <com.example.mypraticeapplication.widget.TypefaceEditText
                    android:id="@+id/edt_EaringMemberCount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_size"
                    android:hint="@string/applicant_EarningCount_label"
                    android:imeOptions="actionNext"
                    android:text="@{itemData.earningMemberCount.toString()}"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_323232"
                    android:textSize="@dimen/verificationDetailTextSize"
                    app:custom_font="@string/app_font_regular" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>