                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:visibility="visible"
                            android:layout_gravity="start"
                            android:layout_weight="0.7"
                            android:textColor="@color/gray_323232"
                            android:drawablePadding="3sp"
