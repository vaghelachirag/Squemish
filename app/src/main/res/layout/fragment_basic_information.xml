                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="@string/addressFor"
                            android:gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/gray_323232"
                            android:drawableTint="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints">
                        </com.example.mypraticeapplication.widget.HeaderText>
                        <com.example.mypraticeapplication.widget.SmallText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:visibility="visible"
                            android:layout_gravity="start"
                            android:layout_weight="0.7"
                            android:text="@={viewModel.addressFor}"
                            android:textColor="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints,SmallSp">
                        </com.example.mypraticeapplication.widget.SmallText>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    card_view:layout_constraintBottom_toBottomOf="@+id/divider2"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.example.mypraticeapplication.widget.HeaderText
                            android:id="@+id/txtFiProductSubproductHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="@string/productsubproduct"
                            android:gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/gray_323232"
                            android:drawableTint="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints">
                        </com.example.mypraticeapplication.widget.HeaderText>
                        <com.example.mypraticeapplication.widget.SmallText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:visibility="visible"
                            android:layout_gravity="start"
                            android:layout_weight="0.7"
                            android:text="@={viewModel.productsubproduct}"
                            android:textColor="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints,SmallSp">
                        </com.example.mypraticeapplication.widget.SmallText>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    card_view:layout_constraintBottom_toBottomOf="@+id/divider2"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.example.mypraticeapplication.widget.HeaderText
                            android:id="@+id/txtFiOfficeNameHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="@string/officeName"
                            android:gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/gray_323232"
                            android:drawableTint="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints">
                        </com.example.mypraticeapplication.widget.HeaderText>
                        <com.example.mypraticeapplication.widget.SmallText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:visibility="visible"
                            android:layout_gravity="start"
                            android:layout_weight="0.7"
                            android:text="@={viewModel.officeName}"
                            android:textColor="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints,SmallSp">
                        </com.example.mypraticeapplication.widget.SmallText>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_FiType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    card_view:layout_constraintBottom_toBottomOf="@+id/divider2"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.example.mypraticeapplication.widget.HeaderText
                            android:id="@+id/txtFiProductSubProductHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="@string/prepost"
                            android:gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/gray_323232"
                            android:drawableTint="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
                            tools:ignore="MissingConstraints">
                        </com.example.mypraticeapplication.widget.HeaderText>
                        <com.example.mypraticeapplication.widget.SmallText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:visibility="visible"
                            android:layout_gravity="start"
                            android:layout_weight="0.7"
