<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.mypraticeapplication.viewmodel.verificationDetail.BasicInformationViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardBackgroundColor="@color/white"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    android:padding="8sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="ExtraText">
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints,RtlSymmetry"
                    card_view:layout_constraintBottom_toBottomOf="@+id/divider1"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.example.mypraticeapplication.widget.HeaderText
                            android:id="@+id/txtRefNoHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/refNo"
                            android:gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/gray_323232"
                            android:drawableTint="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="12sp"
                            tools:ignore="MissingConstraints">
                        </com.example.mypraticeapplication.widget.HeaderText>
                        <com.example.mypraticeapplication.widget.SmallText
                            android:id="@+id/txtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:visibility="visible"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:textColor="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/_12sdp"
                            android:text="@={viewModel.refNo}"
                            tools:ignore="MissingConstraints,SmallSp">
                        </com.example.mypraticeapplication.widget.SmallText>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_Bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints,RtlSymmetry"
                    card_view:layout_constraintBottom_toBottomOf="@+id/ll_Address"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.example.mypraticeapplication.widget.HeaderText
                            android:id="@+id/txtCaseIdHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="@string/caseID"
                            android:gravity="center_vertical"
                            android:visibility="visible"
                            android:textColor="@color/gray_323232"
                            android:drawableTint="@color/gray_323232"
                            android:drawablePadding="3sp"
                            android:textSize="@dimen/verificationDetailTextSize"
