<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/main_bg</item></style>


    <style name="black_btn">
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/selector_btn_black</item>
    </style>



    <style name="ThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_to_bottom</item>
    </style>



    <style name="MaterialButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/btn_login_accent</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>



    <style name="MaterialCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/check_box_state_bg</item>
        <item name="android:background">@null</item>
    </style>


    <style name="CustomTabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/main_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Alert.Button.Positive</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorTransparentBlack</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RoundedYellowButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_yello_button_cornered</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/main_bg</item>
        <item name="colorControlNormal">@color/separator</item>
        <item name="colorControlActivated">@color/main_bg</item>
        <item name="colorControlHighlight">@color/main_bg</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="ProgressBarColor">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
